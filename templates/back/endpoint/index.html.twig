{% extends 'base.html.twig' %}

{% block title %}Endpoint index{% endblock %}

{% block body %}
    <h1>Endpoint index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Endpoint</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for endpoint in endpoints %}
            <tr>
                <td>{{ endpoint.id }}</td>
                <td>{{ endpoint.description }}</td>
                <td>{{ endpoint.endpoint }}</td>
                <td>
                    <a href="{{ path('app_back_endpoint_show', {'id': endpoint.id}) }}">show</a>
                    <a href="{{ path('app_back_endpoint_edit', {'id': endpoint.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_endpoint_new') }}">Create new</a>
{% endblock %}
